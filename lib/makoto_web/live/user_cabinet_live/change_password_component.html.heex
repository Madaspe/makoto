<div class="container">
  <p class="d-none info-alert" id="info-alert"><%= live_flash(@flash, :info) %></p>

  <p class="d-none danger-alert" id="danger-alert"><%= live_flash(@flash, :error) %></p>
      <div class="row">
        <div class="col-3">
          <div class="nav flex-column nav-pills mt-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
          <a class="nav-link" id="home-tab"  href={Routes.user_cabinet_index_path(@socket, :settings_email, @user.username)} role="tab" aria-controls="home" aria-selected="true">Смена почты</a>
          <a class="nav-link active" id="sec-tab"  href="" role="tab" aria-controls="sec" aria-selected="false">Смена пароля</a>
          <!-- <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill"
          href="#v-pills-settings" role="tab" aria-controls="v-pills-settings"
          aria-selected="false">Settings</a> -->
        </div>
      </div>
      <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
          <div class="tab-pane fade show active py-2" id="home">
          <h5 class="py-1">Смена пароля</h5>

            <%= f = form_for :user, "#", [phx_submit: "submit", phx_target: @myself, phx_change: "validate"] %>
              <div class="form-group row">
      

              <label class="col-5 col-form-label">Новый пароль</label>
                <div class="col-7">
                <%= password_input f, :new_password, class: "form-control" %>
                </div>

              <label class="col-5 col-form-label mt-1">Новый пароль еще раз</label>
                <div class="col-7">
                <%= password_input f, :new_password_validate, class: "form-control mt-1" %>
                </div>
    
              <label class="col-5 col-form-label mt-1">Текущий пароль</label>
                <div class="col-7">
                <%= password_input f, :current_password, class: "form-control mt-1" %>
                </div>

                </div>
              
     
        <hr class="opacity-3">
        <div class="float-right mb-3">
           <%= submit "Сменить", class: "btn btn-success"%>
        </div>
  </div>
   </div>
    </div>
     </div>
      </div>