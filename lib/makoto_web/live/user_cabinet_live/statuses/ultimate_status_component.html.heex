<div class="col-12 mt-3">
  <div class="status_list-status_buy p-3">
    <h5 class="status_list-status_buy-title py-1">Покупка статуса Ultimate</h5>
    <hr class="mt-0">
    <div class="row">
      <div class="col-6">
        <div class="form-group">
          <label for="exampleFormControlSelect1">Выбери сервер</label>
          <select class="selector" id="by_server" style="display: none;">
            
            <option data-id="8" value="TechMagic">SkyTech</option>
            
          </select><div class="nice-select selector" tabindex="0"><span class="current">SkyTech</span><ul class="list"><li data-value="TechMagic" class="option selected focus">SkyTech</li></ul></div>
        </div>
      </div>
      <div class="col-6">
        <div class="form-group">
          <label for="exampleFormControlSelect1">Выбери
            продолжительность</label>
            <select class="selector" id="by_time" style="display: none;">
              <option value="0">1 месяц</option>

            </select><div class="nice-select selector" tabindex="0"><span class="current">1 месяц</span><ul class="list"><li data-value="0" class="option selected">1 месяц</li></ul></div>
          </div>
        </div>

        <div class="col-7 mx-auto mt-4">
          <p class="text-center" id="outtext">Купить статус Ultimate</p>
          <form action="" phx-submit="buy" id="buystatus" phx-target={@father_component}>
            <input type="hidden" name="status" value="9">
            <input type="hidden" name="server" value="TechMagic">
            <input type="hidden" name="time" value="0">
            <input type="hidden" name="type" value="buy">
            <input type="hidden" name="statustype" value="">

            <button class="btn btn-om btn-reg mx-auto" type="submit" id="buystatusb" style="display: block;">Купить за 999 Рубинов</button>


          </form>
        </div>
        
      </div>
    </div>
  </div>


</div>
</div>